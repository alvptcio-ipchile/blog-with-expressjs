extends ../layout/common

block content
  .row.mt-5
  .col-md-5.m-auto
    .card.card-body
      h1.text-center.mb-3
        i.fas.fa-sign-in-alt
        |   Login
      include ../partials/messages
      form(method="POST")
        .form-group
          label(for='email') Name
          input#email.form-control(type='text', name='username', placeholder='Enter Email' )
        .form-group
          label(for='email') Email
          input#email.form-control(type='text', name='email', placeholder='Enter Email')
        .form-group
          label(for='password') Password
          input#password.form-control(type='password', name='password', placeholder='Enter Password')
        .form-group
          label(for='password') Confirm Password
          input#password.form-control(type='password', name='password2', placeholder='Confirm Password')
        button.btn.btn-primary.btn-block(type='submit') Register
      p.lead.mt-4
        |Have No Account? 
        a(href='/users/login') Login
